<style is:global>
:root {
  --font-color: #1B21lE; /* Replace #000 with your desired color */
  --font-family: Monospace, sans-serif;
  --background: #EDE8DD;

}
.terminal {
    background-color: black;
    color: lime;
    padding: 20px;
    font-family: monospace;
    height: 200px;
    overflow-y: scroll;
    margin-top: 20px;
    border: 2px solid #333;
}
.titlebar {
    border: 2px solid black;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ddd;
    padding: 5px 10px;
    border: 2px solid black;
    margin-top: -52px;
    margin-right: -51px;
    margin-left: -51px;
    /* margin-left: 10px;
    margin-bottom: 10px; */
    font-family: monospace;
    }
body {
    font-family: var(--font-family);
    margin: 0;
    padding: 0;
	background: var(--background);
    /* color: var(--font-color); */
}

h2 {
    text-align: center;
    margin-top: 40px;
}

section {
    padding: 40px 20px;
}

form {
    display: flex;
    flex-direction: column;
    max-width: 600px;
    margin: 0 auto;
}

form input, form textarea {
    margin: 10px 0;
    padding: 10px;
    font-size: 1.1em;
}

form button {
    background-color: #333;
    color: white;
    padding: 10px;
    border: none;
    font-size: 1.1em;
    cursor: pointer;

}

